<!DOCTYPE html>
<html lang="en">

<head>
    <title>我的医生</title>
    <% include ../layout/layout %>
    <link rel="stylesheet" href="<%= _src('/css/basic/basic.min.css') %>">
    <script src="<%= _src('/lib/validform/Validform_v5.3.2_min.js') %>"></script>
</head>

<body style="background-color: #f5f5f5">
    <% data.forEach(function(data){ %>
    <div class="doctor-introduce">
        <div class="weui-cell weui-cell_access">
            <div class="weui-cell__bd weui-cell_primary doctor-content">
                <div class="doctor-img">
                    <img class="img-doctor" src="<%= data.avatarUrl %>">
                </div>
                <div class="doctor-info">
                    <p class="doctor-name"><%= data.name %></p>
                    <p class="doctor-title"><%= data.department %> <%= data.doctorTitle %></p>
                    <p class="doctor-hospital"><%= data.hospital %></p>
                </div>
            </div>
        </div>
        <div class="go-consult" onclick="goConsult()">
            <button class="btn-consult">去咨询</button>
        </div>
    </div>
    <% }) %>
</body>
</html>
<script>
    function goConsult() {
        window.open("<%=_src('/my-doctor/consult-doctor')%>?v=" + (new Date().getTime()), '_self')
    }
</script>
<style>
    .doctor-introduce{
        width: 100%;
        height: 160px;
        background-color: white;
        margin-bottom: 10px;
    }
    .doctor-content{
        height: 96px;
        width: 100%;
    }
    .doctor-img{
        width: 15%;
        float: left;
    }
    .img-doctor{
        width: 48px;
        height: 48px;
        margin-top: 15px;
        border-radius: 24px;
    }
    .doctor-info{
        width: 50%;
        float: left;
        line-height: 25px;
        margin-left: 10px;
        margin-top: 10px;
    }
    .doctor-name{
        color: #333;
        font-size: 16px;
    }
    .doctor-title{
        color: #666;
        font-size: 14px;
    }
    .doctor-hospital{
        color: #999;
        font-size: 14px;
    }
    .go-consult{
        height: 44px;
        width: 100%;
        border-top: 1px solid #ddd;
        text-align: center;
        padding: 8px;
    }
    .btn-consult{
        width:100%;
        background-color:white;
        border:none;
        font-size: 16px;
        color: #35B2F2;
    }
    .btn-consult:active{
        outline: none;
    }
    .btn-consult:focus{
        outline: none;
    }
</style>