<script>
  var status = "<%=status%>";
  var doctor = "<%=doctor%>";
  var tel = "<%=tel%>";
  $(".weui-btn").on('click', function() {
    let code = $("#code").val(),
        password = $("#password").val(),
        again_password = $("#again_password").val();
    if (testCode(code) === true && testPassword(password) === true) {
      if (password === again_password) {
        register(code, password)
      } else {
        toast('两次输入密码不一致，请重新输入')
      }
    }

  })

  $("#code").on('input', function() {
    let code = $("#code").val().length
    let password = $("#password").val().length
    let again_password = $("#again_password").val().length
    if (code === 6 && password >= 6 && again_password >= 6) {
      $(".weui-btn").attr('disabled',false)
      $(".weui-btn").css({
        'background-color': '#35B2F2'
      })
    } else {
      $(".weui-btn").attr('disabled',true)
      $(".weui-btn").css({
        'background-color': '#ccc'
      })
    }
  })

  $("#password").on('input', function() {
    let code = $("#code").val().length
    let password = $("#password").val().length
    let again_password = $("#again_password").val().length
    if (code === 6 && password >= 6 && again_password >= 6) {
      $(".weui-btn").attr('disabled',false)
      $(".weui-btn").css({
        'background-color': '#35B2F2'
      })
    } else {
      $(".weui-btn").attr('disabled',true)
      $(".weui-btn").css({
        'background-color': '#ccc'
      })
    }
  })

  $("#again_password").on('input', function() {
    let code = $("#code").val().length
    let password = $("#password").val().length
    let again_password = $("#again_password").val().length
    if (code === 6 && password >= 6 && again_password >= 6) {
      $(".weui-btn").attr('disabled',false)
      $(".weui-btn").css({
        'background-color': '#35B2F2'
      })
    } else {
      $(".weui-btn").attr('disabled',true)
      $(".weui-btn").css({
        'background-color': '#ccc'
      })
    }
  })

  // 验证验证码
  function testCode(code) {
    if (code) {
      if ((/^\d{6}$/).test(code)) {
        return true;
      } else {
        toast('请输入正确的6位短信验证码')
      }
    } else {
      toast('请输入验证码！')
    }
  };

  // 验证密码
  function testPassword(password) {
    if (password) {
      if ((/^[A-Za-z0-9]{6,15}$/).test(password)) {
        return true;
      } else {
        toast('密码范围在6~15位之间！')
      }
    } else {
      toast('请输入密码！')
    }
  };

  function register(code,password) {
    $.ajax({
      type: 'post',
      url: `<%=_src('/register')%>?tel=${tel}&status=${status}&doctor=${doctor}`,
      data: {code:code,password:password},
      success: function(res) {
        if (res.data && res.data.code === 0) {
          if (status == 0) {
            window.location = `<%=_src('/login/success?name=${res.data.name}')%>`
          } else if (status == 1) {
            window.location = `<%=_src('/uploadCaseHistory')%>`
          } else if (status == 2) {
            window.location = `<%=_src('/EMR')%>`
          } else if (status == 3) {
            window.location = `<%=_src('/followUp')%>`
          } else if (status == 4) {
            window.location = `<%=_src('/find-doctor')%>?doctor=${doctor}`
          } else if (status == 5) {
            window.location = `<%=_src('/authlist')%>`
          } else if (status == 6) {
            window.location = `<%=_src('/followfeedback')%>`
          } else if (status == 7) {
            window.location = `<%=_src('/family')%>`
          }
        } else {
          toast(res.err)
        } 
      },
      error:function (err) {
        console.log(err)
        toast("服务器请求出错")
      }
    })
  }


  function toast(msg) {
    var $toast = $('#toast');
    $('#toast p').html(msg)
    $toast.fadeIn(100);
    setTimeout(function () {
        $toast.fadeOut(100);
    }, 1500);
  }
</script>
