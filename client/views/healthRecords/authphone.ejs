<!DOCTYPE html>
<html lang="en">
<head>
  <title>实名认证</title>
  <% include ../layout/layout %>
  <script type="text/javascript">
    var pathName = "<%=_src('')%>" //获取当前域名
    wxconfig();
    //ajax请求config配置参数
    function wxconfig() {
      $.ajax({
       type: "get",
       url: pathName+"/signature",
       data: {url:location.href},
       success: function(msg){
          //配置微信JS-SDK
        wx.config({
            debug: false, // 开启调试模式,调用的所有api的返回值会在客户端alert出来，若要查看传入的参数，可以在pc端打开，参数信息会通过log打出，仅在pc端时才会打印。
            appId: msg.appId, // 必填，公众号的唯一标识
            timestamp:msg.timestamp , // 必填，生成签名的时间戳
            nonceStr: msg.nonceStr, // 必填，生成签名的随机串
            signature: msg.signature,// 必填，签名，见附录1
            jsApiList: ['onMenuShareAppMessage','onMenuShareTimeline'],// 必填，需要使用的JS接口列表，所有JS接口列表见附录2
        });
       },
       error:function(err){
          console.log(err);
       }
      });
    };
    wx.ready(function () {
    // 在这里调用 API
    // 分享给朋友
      wx.onMenuShareAppMessage({
          title: '全程心管家', // 分享标题
          desc: `全程心管家，健康你我他`, // 分享描述
          link: `${pathName}/share`, // 分享链接，该链接域名或路径必须与当前页面对应的公众号JS安全域名一致
          imgUrl: `${pathName}/image/assessment/331506325982_.pic_hd.jpg`, // 分享图标
          success: function () { 
              // 用户确认分享后执行的回调函数
          },
          cancel: function () { 
              // 用户取消分享后执行的回调函数
          },
      });
      // 分享到朋友圈
      wx.onMenuShareTimeline({
          title: '全程心管家', // 分享标题
          link: `${pathName}/share`, // 分享链接，该链接域名或路径必须与当前页面对应的公众号JS安全域名一致
          imgUrl: `${pathName}/image/assessment/331506325982_.pic_hd.jpg`, // 分享图
          success: function () { 
              // 用户确认分享后执行的回调函数
          },
          cancel: function () { 
              // 用户取消分享后执行的回调函数
          }
      });  
    });
  </script>
  <style>
    body{
      background: #ebebeb;
      color: #666;
    }
    .weui-btn_primary:not(.weui-btn_disabled):active{
      background-color: #6fc8f6;
    }
    .authphone_footer{
      position: fixed;
      left: 0;
      bottom:0;
      width: 100%;
    }
    .authphone_footer_error{
      padding:10px 15px;
      text-align: center;
      font-size: 14px;
      color: #DA322E;
    }
    .authphone_btn a{
      background:#35B2F2;
    }
    .authphone_form{
      background:#fff;
    }
    .authphone_prompting{
      padding: 10px 15px;
      font-size: 14px;
      color: #999999;
    }
    .weui-btn{
      border-radius: 0;
    }
    .weui-btn:after{
      border: 0;
    }
    .weui-toast{
      min-height: 0;
    }
    .weui-toast__content{
      margin-top: 10px;
    }
  </style>
</head>

<body>
  <div class="authphone">
    <div class="authphone_form">
      <div class="weui-cell">
        <div class="weui-cell__hd"><label class="weui-label">手机号</label></div>
        <div class="weui-cell__bd">
            <input class="weui-input" id="phone" type="number" maxlength="11" placeholder="请输入手机号"/>
        </div>
      </div>
      <div class="weui-cell">
        <div class="weui-cell__hd"><label class="weui-label">姓名</label></div>
        <div class="weui-cell__bd">
            <input class="weui-input" id="name" type="text" placeholder="请输入姓名"/>
        </div>
      </div>
      <div class="weui-cell">
        <div class="weui-cell__hd"><label class="weui-label">身份证号</label></div>
        <div class="weui-cell__bd">
            <input class="weui-input" id="card" type="text" maxlength="18" placeholder="请输入身份证号"/>
        </div>
      </div>
    </div>
    <p class="authphone_prompting">全程心管家将对您的个人信息严格保密，请放心填写。</p>
    <div class="authphone_footer">
      <div class="authphone_footer_error">
        *请重新填写您的个人信息并认真核对，以免再次认证失败。
      </div>
      <div class="page__bd page__bd_spacing authphone_btn">
        <a href="javascript:;" class="weui-btn weui-btn_primary" id="authphone_btn">申请实名认证</a>
      </div>
    </div>
  </div>
  <div id="audit_toast" style="display: none;">
    <div class="weui-mask_transparent"></div>
    <div class="weui-toast">
        <i class="weui-loading weui-icon_toast"></i>
        <p class="weui-toast__content">审核中</p>
    </div>
  </div>
  <div id="certification_by" style="display: none;">
    <div class="weui-mask_transparent"></div>
    <div class="weui-toast">
        <i class="weui-icon-success-no-circle weui-icon_toast"></i>
        <p class="weui-toast__content">认证通过</p>
    </div>
  </div>
  <div id="authentication_failed" style="display: none;">
    <div class="weui-mask_transparent"></div>
    <div class="weui-toast">
        <i class="weui-icon-cancel weui-icon_toast"></i>
        <p class="weui-toast__content">认证失败</p>
    </div>
  </div>

</body>
<script>
$(document).ready(function(){
   // 申请认证
  $("#authphone_btn").on('click',function() {
    var phone = $("#phone").val(),
        name = $("#name").val(),
        card = $("#card").val();
    if (testPhone(phone) === true && testName(name) === true && testCard(card) === true) {
      $(".authphone_footer_error").css({
        'display': 'none'
      })
      authphone();
    }   
  });

 //  验证手机号
 function testPhone(phone) {
  if (phone){
    if ((/^1[3|5|7|8][0-9]{9}$/).test(phone)) {
      if (phone.substr(0,3) === '170' || phone.substr(0,3) === '171') {
        $(".authphone_footer_error").html('*此手机号码暂不支持实名认证');
      } else {
        return true;
      }
    } else {
      $(".authphone_footer_error").html('*请填写正确的手机号码');
    }
  } else {
    $(".authphone_footer_error").html('*请输入手机号');
  }
 };

 // 验证姓名
 function testName(name) {
  if (name) {
    if ((/^[\u4E00-\u9FA5\uf900-\ufa2d·s]{2,20}$/).test(name)) {
      return true;
    } else {
      $(".authphone_footer_error").html('*请填写正确的姓名');
    }
  } else {
    $(".authphone_footer_error").html('*请输入姓名');
  }
 };

 //验证身份证
 function testCard(card) {
  if (card) {
    if ((/(^\d{15}$)|(^\d{17}([0-9]|X)$)/).test(card)) {
      return true;
    } else {
      $(".authphone_footer_error").html('*请输入正确的身份证号码');
    }
  } else {
    $(".authphone_footer_error").html('*请输入身份证号码');
  }
 };

 //提交请求
 function authphone() {
  alert('成功')
 };

 // 审核中
 function auditToast() {
    var $toast = $('#toast');
    if ($toast.css('display') != 'none') return;
    $toast.fadeIn(100);
 }

  // 认证通过
 function certificationByToast() {
    var $toast = $('#certification_by');
    if ($toast.css('display') != 'none') return;
    $toast.fadeIn(100);
    setTimeout(function () {
      $toast.fadeOut(100);
    }, 2000);
 }

  // 认证失败
 function authenticationFailedToast() {
    var $toast = $('#certification_by');
    if ($toast.css('display') != 'none') return;
    $toast.fadeIn(100);
    setTimeout(function () {
      $toast.fadeOut(100);
    }, 2000);
 }

















}) 
</script>
</html>
